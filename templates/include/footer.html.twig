                {% for linkSocial in linkSocials %}
                    {% if editmode %}
                        <li>{{ linkSocial.link }}</li>
                    {% else %}
                        <li>
                            <a href="{{ linkSocial.link() }}">
                                <i class="{{ linkSocial.css_class }}"></i>
                            </a>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
    </div>
</footer>
